{
    "name": "@nodescript/microframework",
    "version": "1.15.0",
    "description": "Common Microservice Framework",
    "type": "module",
    "sideEffects": false,
    "exports": {
        ".": "./out/main/index.js"
    },
    "main": "out/main/index.js",
    "types": "out/main/index.d.ts",
    "files": [
        "out/main/**/*"
    ],
    "scripts": {
        "clean": "rm -rf out *.tsbuildinfo",
        "dev": "npm run clean && tsc -b -w",
        "compile": "tsc -b",
        "lint": "eslint --cache .",
        "test": "NODE_ENV=test mocha",
        "version": "npm run compile",
        "postversion": "npm publish --access=public && git push --tags origin main"
    },
    "pre-commit": [
        "lint"
    ],
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/nodescriptlang/microframework.git"
    },
    "keywords": [],
    "author": "Boris Okunskiy",
    "license": "ISC",
    "devDependencies": {
        "@nodescript/eslint-config": "^2.0.1",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/mocha": "^8.2.3",
        "@types/node": "^16.18.16",
        "eslint": "^9.13.0",
        "mocha": "^9.2.2",
        "pre-commit": "^1.2.2",
        "typescript": "^5.5.3"
    },
    "dependencies": {
        "@nodescript/errors": "^1.2.0",
        "@nodescript/http-server": "^2.9.0",
        "@nodescript/logger": "^2.0.6",
        "@nodescript/metrics": "^1.7.0",
        "airtight": "^5.7.2",
        "dotenv": "^16.0.3",
        "jsonwebtoken": "^9.0.2",
        "mesh-config": "^1.2.0",
        "mesh-ioc": "^4.0.1",
        "reflect-metadata": "^0.1.13"
    }
}
